{
  "name": "server-api",
  "version": "1.0.0",
  "description": "server-api",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist *.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t server-api .",
    "docker:run": "docker run -p 3000:3000 -d server-api",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "node -r source-map-support/register .",
    "dev": "nodemon server.js",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ignore": [
      "dist/*"
    ],
    "ext": "ts",
    "exec": "npm run clean && npm start"
  },
  "author": "Peter Hoang Nguyen",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^2.1.8",
    "@loopback/boot": "^1.4.6",
    "@loopback/context": "^1.21.0",
    "@loopback/core": "^1.8.7",
    "@loopback/openapi-v3": "^1.9.0",
    "@loopback/repository": "^1.10.0",
    "@loopback/rest": "^1.16.5",
    "@loopback/rest-explorer": "^1.3.0",
    "@loopback/service-proxy": "^1.2.7",
    "@types/ajv": "^1.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.3",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.9.1",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "loopback-connector-kv-redis": "^3.0.1",
    "loopback-connector-mongodb": "^4.2.0",
    "loopback-connector-rest": "^3.4.2",
    "typedi": "^0.8.0"
  },
  "devDependencies": {
    "@loopback/build": "^2.0.5",
    "@loopback/eslint-config": "^2.0.2",
    "@loopback/testlab": "^1.7.1",
    "@types/node": "^10.14.13",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^6.0.0",
    "nodemon": "^1.19.1",
    "source-map-support": "^0.5.12",
    "typescript": "~3.5.3"
  }
}
